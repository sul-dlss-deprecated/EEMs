<div id="details_container">
  <div style="width: 100%; border-bottom: 1px solid #ccc; padding: 4px 0; overflow: auto;">
    <div style="width: 270px; float: left; margin: 5px 0;">
      &laquo; <%= link_back_to_catalog %>    
    </div>          
    <div style="float: left;">
      <%= render 'previous_next_doc' %>
    </div>          
  </div>      
  <div style="width: 250px; float: left; padding: 0 5px; margin: 10px 0; overflow: auto;">
      <h3>Status</h3> 
      <br><br>
      <h3>Acquisitions actions</h3> 
      <ul id="acquisitions_actions">
        <li class="list_style_show">
          <%= link_to 'Send to acquisitions',  '#', {:id => 'link_send_to_acquisitions'} %> 
          <div class="comment_formlet" id="formlet_send_to_acquisitions">
            <textarea id="text_send_to_acquistions" rows="5" cols="28"></textarea>
            <div style="text-align: right; padding-right: 8px;">
              <%= link_to 'Send', '#', :id => 'sent_to_acquisitions_ok', :class => 'sidebar_button'%>
              <%= link_to 'Cancel', '#', :id => 'sent_to_acquisitions_cancel' %>
            </div>
          </div>    
        </li>    
        <li class="list_style_show">
          <%= link_to 'Delete this selection',  '#', {:id => 'link_delete_this_selection'} %> 
          <div class="comment_formlet" id="formlet_delete_this_selection">
            <textarea id="text_delete_this_selection" rows="5" cols="28"></textarea>
            <div style="text-align: right; padding-right: 8px;">
              <%= link_to 'Confirm', '#', :id => 'delete_this_selection_ok', :class => 'sidebar_button'%>
              <%= link_to 'Cancel', '#', :id => 'delete_this_selection_cancel' %>
            </div>
          </div>    
        </li>    
        <li class="list_style_show">
          <%= link_to 'Question/comment to selector',  '#', {:id => 'link_comment_to_selector'} %> 
          <div class="comment_formlet" id="formlet_comment_to_selector">
            <textarea id="text_comment_to_selector" rows="5" cols="28"></textarea>
            <div style="text-align: right; padding-right: 8px;">
              <%= link_to 'Send', '#', :id => 'comment_to_selector_ok', :class => 'sidebar_button'%>
              <%= link_to 'Cancel', '#', :id => 'comment_to_selector_cancel' %>
            </div>
          </div>    
        </li>    
      </ul>      
  </div>      
  <div style="width: 580px; float: right; padding: 0 0 0 20px; margin: 10px 0; border-left: 1px solid #ccc; ">
    <h1 class="mainTitle"><%= document_heading %></h1>      

    <dl class="details">
      <dt>PURL :</dt><dd></dd>    
      
      <dt>Found at this site :</dt>
      <dd><%= link_to @document[:sourceUrl_field].to_s,  @document[:sourceUrl_field].to_s, {:target => '_blank'} %></dd>

      <dt>Language :</dt>
      <dd><%= @document[:language_field].to_s %></dd>
      
      <dt>Created by :</dt>
      <dd><%= render :partial => 'catalog/_show_partials/creator_name', :locals => {:document => @document} %></dd>
      
      <dt>Direct link to PDF :</dt>
      <dd><%= @document[:url_field].to_s %></dd>
      
      <dt>Local copy of PDF :</dt>
      <dd></dd>

      <dt>Citation/comments :</dt>
      <dd><%= @document[:note_field].to_s %></dd>
      
      <dt>Copyright :</dt>
      <dd><%= @document[:copyrightStatus_field].to_s %> <%= @document[:copyrightDate_field].to_s %></dd>
      
      <dt>Purchase :</dt>
      <dd><%= @document[:paymentStatus_field].to_s %> <%= @document[:paymentFund_field].to_s %></dd>
      
      <dt>Notifications :</dt>
      <dd><%= render :partial => 'catalog/_show_partials/notification', :locals => {:document => @document} %></dd>
      
    </dl>

    <div id="action_log">  
      <h3>Action log</h3>   
    </div>
         
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    
  acquisitionsActionsBindToggle('send_to_acquisitions');	 
  acquisitionsActionsBindToggle('delete_this_selection');
  acquisitionsActionsBindToggle('comment_to_selector');	 


  function acquisitionsActionsBindToggle(name) { 
    $('#link_' + name).toggle(
	  function() {
        $('#formlet_' + name).show();	
	    $('#link_' + name).parents('li').removeClass('list_style_show').addClass('list_style_hide');	
      }, 
	  function() {
        $('#formlet_' + name).hide();	
	    $('#link_' + name).parents('li').removeClass('list_style_hide').addClass('list_style_show');	
      }
    );
  }

});
</script>
