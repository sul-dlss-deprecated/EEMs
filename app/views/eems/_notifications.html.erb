<% label = 'Notify original requestor '%>

<% if (print_eems_field('notify') != '')%>
  <%= check_box_tag 'noop', 'true', true %>
  <%= label_tag 'noop', label %>   
  <%= mail_to print_eems_field('notify'), nil, :id => 'link_notify' %>
  <%= eems_text_field_tag :notify, '', {:size => 16, :id => 'input_notify', :style => 'display: none;'} %>    
  <%= link_to 'edit', '#', :id => 'edit_notify', :class => 'edit_link'%>
<% else %>
  <%= check_box_tag 'noop', 'true' %>
  <%= label_tag 'noop', label %>      
  <%= link_to nil, nil, :id => 'link_notify', :style => 'display: none;' %>
  <%= eems_text_field_tag :notify, '', {:size => 16, :id => 'input_notify', :style => 'display: none;'} %>  
  <%= link_to 'edit', '#', :id => 'edit_notify', :class => 'edit_link', :style => 'display: none;'%>
<% end %>


