<% if (!@log.nil?) %>
  <dl class="details">
	  <% @log.each_entry do |timestamp, entry, comment| %>
	    <dt><%= formatActionLogTimestamp(timestamp) %> : </dt>
	    <dd>
	      <%= formatActionLogMessage(entry) %> 
	      <% if (!comment.nil? && !comment.empty?)%>
  	      <div class="log_comment"><%= comment %></div> 
	      <% end %>
		  </dd>		  		
	  <% end %>
  </dl>
<% end %>